<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="lp.reminiscens.crawler.entities.Event" table="reminiscens.Event">
        <id column="event_id" name="event_id" type="int">
            <generator class="native"/>
        </id>
        <property name="headline">
            <column name="headline"/>
        </property>
        <property name="text">
            <column name="text"/>
        </property>
        <property name="type">
            <column name="type"/>
        </property>
        <property name="source">
            <column name="source"/>
        </property>
        <property name="source_url">
            <column name="source_url"/>
        </property>
        <property name="last_update">
            <column name="last_update"/>
        </property>
        <property name="locale">
            <column name="locale"/>
        </property>
        <many-to-one cascade="all" column="location_id" name="location" unique="true"/>
        <many-to-one cascade="all" column="time_interval_id" name="timeInterval" unique="true"/>
    </class>
</hibernate-mapping>
